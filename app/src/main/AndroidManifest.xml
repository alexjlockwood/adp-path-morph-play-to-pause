<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.alexjlockwood.example.morph">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:name="com.alexjlockwood.example.morph.MainActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:name="com.alexjlockwood.example.morph.PlayPauseStopActivity"
      android:label="@string/app_name"
      android:theme="@style/AppThemeNoActionBar">
    </activity>
    <activity
      android:name="com.alexjlockwood.example.morph.DigitsActivity"
      android:label="@string/app_name"
      android:theme="@style/AppThemeNoActionBar">
    </activity>
    <activity
      android:name="com.alexjlockwood.example.morph.SearchActivity"
      android:label="@string/app_name"
      android:theme="@style/AppThemeNoActionBar">
    </activity>
    <activity
      android:name="com.alexjlockwood.example.morph.AirplaneActivity"
      android:label="@string/app_name"
      android:theme="@style/AppThemeNoActionBar">
    </activity>
    <activity
      android:name="com.alexjlockwood.example.morph.HeartActivity"
      android:label="@string/app_name"
      android:theme="@style/AppThemeNoActionBar">
    </activity>
  </application>

</manifest>
